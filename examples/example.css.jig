/* Example for jig-css */
.container {
  margin: {{ spacing }}px;
  color: {{ theme.primaryColor }};

  @if(isResponsive)
    display: flex;
  @else
    display: block;
  @end

  background-image: url('{{ backgroundImage }}');
}

{{-- Jig comment in CSS --}}
@each(color in palette)
  .bg-{{ color.name }} {
    background-color: {{ color.value }};
  }
@end