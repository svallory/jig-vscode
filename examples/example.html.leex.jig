<!-- Example for jig-html-eex -->
<div class="{{ className }}">
  <h1>{{ title }}</h1>
  @if(user.isLoggedIn)
    <p>Welcome back, {{ user.name }}!</p>
  @else
    <p>Please <a href="/login">log in</a>.</p>
  @end

  <ul>
    @each(item in items)
      <li class="@if(item.active) active @end">
        {{ item.label }}
      </li>
    @end
  </ul>

  {{-- This is a Jig comment --}}
  {{{ unescapedHtml }}}
</div>